// Title : String Permutations by CodeEval
// Author : James Fody
// Description : Find all permutations of a given string

package stringperm;
import java.io.*;
import java.util.*;

public class Stringperm 
{
    public static void main(String[] args) 
    {
        try
        {
            File file = new File("/Users/jimfo1/Desktop/fizzbuzz3.txt");
            BufferedReader buffer = new BufferedReader(new FileReader(file));
            
            String line;

            while ((line = buffer.readLine()) != null) 
            {
                line = line.trim();
                if (line.length() > 0)
                {
                    String temp[];
                    temp = line.split(",");
                    List<String> list = new ArrayList();
                    list = perm("",temp[0], list);

                    Collections.sort(list);

                    for(int i = 0; i < list.size(); i++)
                    {
                        System.out.print(list.get(i));
                        if (i < list.size()-1)
                            System.out.print(",");
                    }
                }
                System.out.println();
            }
        }
        catch (IOException e)
        {
            
        }
    }
    static List perm(String s, String l, List list)
    {
        int n = l.length();
        if (n == 0)
        {
            list.add(s);
        }
        else 
        {
            for (int i = 0; i < n; i++)
            {
                perm(s + l.charAt(i), l.substring(0, i) + l.substring(i+1, n), list);   
            }
        }
        return list;
    }
}
